<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>All Jewelry Pieces</title>
</head>
<body>
    <%- include('../navbar') %>
    <h1>All Jewelry Pieces</h1>

    <div class="catalogue">
        <% allPieces.forEach((onePiece) => { %>
            <div class="jewelry">
                <a href="/jewelry/<%= onePiece._id %>">
                    <img src="<%= onePiece.imageUrl %>" alt="<%= onePiece.name %>">
                </a>
                <div class="designer-name"><%= onePiece.designer.brandName %></div>
                <h3><%= onePiece.name %></h3>
                <p class="price">BHD <%= onePiece.price %></p>
                <a href="/jewelry/<%= onePiece._id %>">View details</a>

                <% if (user && onePiece.designer && user._id === onePiece.designer._id.toString()) { %>
                    <div class="admin-controls">
                        <a href="/jewelry/update/<%= onePiece._id %>">Update Item</a>
                        <form action="/jewelry/delete/<%= onePiece._id %>" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
        <% }) %>
    </div>
</body>
</html>